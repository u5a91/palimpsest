---
// src/layouts/PostsLayout.astro
const { frontmatter, children } = Astro.props;
const BASE = import.meta.env.BASE_URL;
---
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=550" />
  <title>{frontmatter.title ?? 'PALIMPSEST'}</title>
  <link rel="stylesheet" href={`${BASE}styles.css`} />

  <!-- MathJax の設定 -->
  <script>
    window.MathJax = {
      tex: {
        inlineMath: [['$', '$'], ['\\(', '\\)']],
        displayMath: [['$$', '$$'], ['\\[', '\\]']]
      },
      options: {
        skipHtmlTags: ['script','noscript','style','textarea','pre','code']
      }
    };
  </script>
  <script
    async
    id="MathJax-script"
    src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"
  ></script>
</head>
<body>
  <div class="wrapper">
    <!-- ヘッダー：サイトタイトルのみ -->
    <header class="tab-header">
        <a href={BASE} class="site-title logo-outline" aria-label="PALIMPSEST">
    <span class="ch">P</span><span class="ch">A</span><span class="ch">L</span><span class="ch">I</span><span class="ch">M</span><span class="ch">P</span><span class="ch">S</span><span class="ch">E</span><span class="ch">S</span><span class="ch">T</span>
  </a>


    </header>

    <!-- 本文スロット -->
    <section class="tab-content">
      <article class="markdown-body">
        <slot />
      </article>
    </section>
  </div>

  <!-- 全文描画後に MathJax を走らせる -->
  <script>
    window.MathJax?.typesetPromise();
  </script>
<footer>
  <div class="wrapper" style="text-align:center;">
    <p>© 2025 宇佐</p>
  </div>
</footer>

</body>
</html>
